<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_buy_search"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nl.mprog.rens.vinylcountdown.BuySearchActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/current_page">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <EditText
                android:layout_width="match_parent"
                android:hint="Search..."
                android:gravity="center"
                android:layout_height="wrap_content"
                android:id="@+id/searchSaleED"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:padding="5dp"
                android:background="@drawable/edittext_background"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/ic_search_category_default"
                android:id="@+id/imageButton6"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:onClick="onSearchClick"
                android:background="@null" />
        </LinearLayout>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_buy"
            android:padding="10dp"
            android:gravity="center"/>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/buyResult"
            android:paddingLeft="15dp"
            android:layout_weight="6"/>

    </LinearLayout>

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/current_page">
        <!-- The main content view -->

        <FrameLayout
            android:id="@+id/content_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </FrameLayout>
        <!-- The navigation drawer -->

        <ListView android:id="@+id/main_drawer"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:background="@color/drawerBc"
            android:layout_gravity="start"
            android:alpha="0.9"
            android:choiceMode="singleChoice"
            android:divider="@android:color/transparent"
            android:dividerHeight="3dp"/>
    </android.support.v4.widget.DrawerLayout>

    <nl.mprog.rens.vinylcountdown.CustomTextView
        android:text="Vinyl Countdown"
        android:gravity="center"
        android:textSize="30dp"
        android:textColor="@color/softWhite"
        android:background="@color/drawerBc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/menubutton"
        android:layout_above="@+id/current_page" />

    <nl.mprog.rens.vinylcountdown.CustomTextView
        android:text="Marketplace"
        android:gravity="center"
        android:textSize="30dp"
        android:textColor="@color/softWhite"
        android:background="@color/drawerBc"
        android:alpha="0.8"
        android:id="@+id/current_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/menubutton"
        />

    <Button
        android:text="+"
        android:textSize="36sp"
        android:textColor="@color/softWhite"
        android:background="@color/drawerBc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/menubutton"
        android:onClick="openDrawer"
        android:elevation="0dp"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
