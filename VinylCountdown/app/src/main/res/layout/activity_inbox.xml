<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_inbox"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nl.mprog.rens.vinylcountdown.InboxActivity">

    <nl.mprog.rens.vinylcountdown.CustomTextView
        android:text="Vinyl Countdown"
        android:gravity="center"
        android:textSize="30dp"
        android:textColor="@color/softWhite"
        android:background="@color/drawerBc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/menubutton"
        android:layout_above="@+id/current_page" />

    <nl.mprog.rens.vinylcountdown.CustomTextView
        android:text="inbox"
        android:gravity="center"
        android:textSize="30dp"
        android:textColor="@color/softWhite"
        android:background="@color/drawerBc"
        android:alpha="0.8"
        android:id="@+id/current_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/menubutton"
        />

    <Button
        android:text="+"
        android:textSize="36sp"
        android:textColor="@color/softWhite"
        android:background="@color/drawerBc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/menubutton"
        android:onClick="openDrawer"
        android:elevation="0dp"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Refresh"
        android:layout_gravity="center"
        android:background="@drawable/button_background"
        android:layout_alignBottom="@+id/inboxList"
        android:layout_alignEnd="@id/inboxList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:id="@+id/button9"
        android:onClick="refreshContent"/>

    <ListView
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/current_page"
        android:id="@+id/inboxList"
        android:divider="@android:color/transparent"
        android:dividerHeight="8.0sp">


    </ListView>


    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/current_page">
        <!-- The main content view -->

        <FrameLayout
            android:id="@+id/content_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </FrameLayout>
        <!-- The navigation drawer -->

        <ListView android:id="@+id/main_drawer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/drawerBc"
            android:layout_gravity="start"
            android:alpha="0.9"
            android:choiceMode="singleChoice"
            android:divider="@android:color/transparent"
            android:dividerHeight="3dp"/>
    </android.support.v4.widget.DrawerLayout>



</RelativeLayout>
