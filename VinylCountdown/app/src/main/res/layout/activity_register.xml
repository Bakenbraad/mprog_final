<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="nl.mprog.rens.vinylcountdown.RegisterActivity"
    android:addStatesFromChildren="false"
    android:background="@drawable/background">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:layout_margin="3dp"
        android:hint="E-mail address"
        android:gravity="center"
        android:textColor="@color/softWhite"
        android:padding="5dp"
        android:background="@color/colorAccent"
        android:layout_centerVertical="true"
        android:id="@+id/regEmail"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Username"
        android:layout_margin="3dp"
        android:textColor="@color/softWhite"
        android:padding="5dp"
        android:background="@color/colorAccent"
        android:ems="10"
        android:layout_above="@+id/regEmail"
        android:id="@+id/regUsername"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:hint="Password"
        android:layout_margin="3dp"
        android:gravity="center"
        android:textColor="@color/softWhite"
        android:padding="5dp"
        android:background="@color/colorAccent"
        android:layout_below="@+id/regEmail"
        android:id="@+id/regPass"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_margin="3dp"
        android:textColor="@color/softWhite"
        android:padding="5dp"
        android:background="@color/colorAccent"
        android:layout_below="@+id/regPass"
        android:id="@+id/regPassComp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:hint="Repeat password"
        android:gravity="center"/>

    <Button
        android:text="Sign up"
        style="@android:style/Widget.Material.Light.Button.Inset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/regPassComp"
        android:id="@+id/button4"
        android:onClick="signUp"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:alpha="0.8"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Back to Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@android:style/Widget.Material.Light.Button.Inset"
        android:id="@+id/button3"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:alpha="0.8"
        android:onClick="goToLogin"
        android:layout_below="@+id/button4"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="vinyl countdown"
        android:gravity="center"
        android:textSize="45dp"
        android:padding="15dp"
        android:fontFamily=""
        android:alpha="0.8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textColor="@color/softWhite"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>

