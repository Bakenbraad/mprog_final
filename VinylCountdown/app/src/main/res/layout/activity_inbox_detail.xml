<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_inbox_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="nl.mprog.rens.vinylcountdown.InboxDetailActivity">

    <nl.mprog.rens.vinylcountdown.AdapterClasses.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:background="@color/drawerBc"
        android:textColor="@color/softWhite"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="center"
        android:layout_marginBottom="10dp"

        android:text="Message"
        android:id="@+id/title_bar"
        />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_below="@+id/title_bar">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">

            <TextView
                android:text="Subject:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView25"
                android:layout_weight="3" />

            <TextView
                android:text="record name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/message_offer"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp">

            <TextView
                android:text="Sender:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView23"
                android:layout_weight="3" />

            <TextView
                android:text="senders email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/message_sender"
                android:layout_weight="1" />
        </LinearLayout>

        <TextView
            android:text="Content:"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView26" />

        <TextView
            android:text="The message content."
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:id="@+id/message_content" />

        <TextView
            android:text="time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/message_time"
            android:layout_weight="1"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:text="Accept"
                android:background="@drawable/button_background_accept"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/accept_button"
                android:layout_weight="1"
                android:onClick="confirmMessage"/>

            <Button
                android:text="Reject"
                android:layout_margin="10dp"
                android:background="@drawable/button_background_reject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/reject_button"
                android:layout_weight="1"
                android:onClick="rejectMessage"/>

            <TextView
                android:text="You already replied to this message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/already_replied_text"
                android:layout_weight="1"
                android:visibility="gone"/>

        </LinearLayout>

        <Button
            android:text="cancel"
            android:onClick="cancelMessage"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:background="@drawable/button_background"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button12" />
    </LinearLayout>



</RelativeLayout>
