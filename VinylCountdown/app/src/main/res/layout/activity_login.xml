<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/vinylbc"
    tools:context="nl.mprog.rens.vinylcountdown.Activities.LoginActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:hint="E-Mail"
        android:gravity="center"
        android:textColor="@color/softWhite"
        android:textColorHint="@color/softWhite"
        android:padding="5dp"
        android:background="@color/drawerBc"
        android:id="@+id/login_email_ed"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Login"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:onClick="login"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:alpha="0.99"
        android:background="@drawable/button_background"
        android:layout_below="@+id/login_pass_ed"
        android:layout_alignStart="@+id/login_pass_ed"
        android:layout_alignEnd="@+id/login_email_ed" />

    <Button
        android:text="Sign up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:id="@+id/button4"
        android:onClick="goToRegisterActivity"
        android:background="@drawable/button_background"
        android:alpha="0.99"
        android:layout_below="@+id/button2"
        android:layout_alignStart="@+id/button2"
        android:layout_alignEnd="@+id/login_email_ed" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:gravity="center"
        android:textColor="@color/softWhite"
        android:textColorHint="@color/softWhite"
        android:padding="5dp"
        android:background="@color/colorPrimaryDark"
        android:hint="Password"
        android:layout_marginTop="5dp"
        android:id="@+id/login_pass_ed"
        android:layout_below="@+id/login_email_ed"
        android:layout_alignStart="@+id/login_email_ed"
        android:layout_alignEnd="@+id/login_email_ed" />

    <nl.mprog.rens.vinylcountdown.AdapterClasses.CustomTextView
        android:text="Vinyl Countdown"
        android:gravity="center"
        android:textSize="45dp"
        android:padding="20dp"
        android:fontFamily=""
        android:alpha="0.9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textColor="@color/softWhite"
        android:background="@color/drawerBc"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
