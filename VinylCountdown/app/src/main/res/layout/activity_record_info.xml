<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sale"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context="nl.mprog.rens.vinylcountdown.Activities.RecordInfoActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/albuminfo"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recordSell"
            android:textSize="30sp" />

        <TextView
            android:text=""
            android:layout_width="match_parent"
            android:id="@+id/artistSell"
            android:textSize="14sp"
            android:layout_height="30dp" />

        <TextView
            android:text=""
            android:layout_width="match_parent"
            android:maxHeight="70dp"
            android:id="@+id/summarySell"
            android:textSize="18sp"
            android:layout_height="wrap_content" />

        <TextView
            android:text="@string/tracks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView18"
            android:textSize="18sp"
            android:paddingTop="8dp"
            android:gravity="center"
            android:textStyle="normal|bold" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/rightTracks"
            android:divider="@android:color/transparent"
            android:dividerHeight="1.0sp"
            android:layout_weight="1"/>

        <Button
            android:text="@string/back"
            android:layout_width="match_parent"
            android:background="@drawable/button_background"
            android:layout_height="wrap_content"
            android:id="@+id/button10"
            android:onClick="backToSale"
            />

    </LinearLayout>


</RelativeLayout>
