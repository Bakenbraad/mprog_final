<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sale_search"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"

    tools:context="nl.mprog.rens.vinylcountdown.SaleSearchActivity">
    <Button
        android:text="+"
        android:textSize="36sp"
        android:alpha="0.4"
        android:background="@color/softWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/menubutton"
        android:onClick="openDrawer"
        android:elevation="0dp"
        android:layout_alignParentTop="true"
        style="@style/Widget.AppCompat.Button.Small" />

    <nl.mprog.rens.vinylcountdown.MyTextView
        android:text="Vinyl Countdown"
        android:gravity="center"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/menubutton" />

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/menubutton">
        <!-- The main content view -->

        <FrameLayout
            android:id="@+id/content_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

        </FrameLayout>
        <!-- The navigation drawer -->

        <ListView android:id="@+id/sale_drawer"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:foregroundGravity="center"

            android:choiceMode="singleChoice"
            android:divider="@android:color/transparent"
            android:dividerHeight="0dp"/>
    </android.support.v4.widget.DrawerLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/menubutton">



        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/searchSaleED"
            android:imeOptions="actionSearch"
            android:layout_margin="15dp"
            android:inputType="text"
            android:padding="5dp"
            android:background="@drawable/drawable"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Album"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView11"
                android:layout_weight="0.19" />

            <Switch
                android:textOff="Searhmode: Album"
                android:textOn="Searhmode: Artist"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:id="@+id/switch1"
                android:paddingRight="24dp"
                android:layout_marginLeft="10dp"
                android:gravity=""
                android:layout_weight="0.19" />

            <TextView
                android:text="Artist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView10"
                android:layout_weight="0.29" />

            <Button
                android:text="Search"
                android:onClick="onSearchClick"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button14"
                android:layout_weight="1"
                style="@android:style/Widget.DeviceDefault.Light.Button.Inset" />
        </LinearLayout>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/saleResult"
            android:paddingLeft="15dp" />

    </LinearLayout>

</RelativeLayout>
