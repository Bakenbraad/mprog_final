<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sale_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context="nl.mprog.rens.vinylcountdown.SaleDetail">

    <TextView
        android:text="Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/titleDetail"
        android:textSize="20sp"
        android:layout_above="@+id/artistDetail"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/imageDetail" />

    <TextView
        android:text="About your record (others can read this):"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/artistDetail"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView6"
        android:paddingTop="15dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:inputType="textPersonName"
        android:text=""
        android:hint="About"
        android:maxLines="10"
        android:ems="10"
        android:background="@drawable/drawable"
        android:padding="8dp"
        android:id="@+id/editText"
        android:layout_height="90dp"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true"
        android:gravity="top"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_marginLeft="60dp"
        app:srcCompat="@drawable/cartout"
        android:background="@null"
        android:scaleType="fitCenter"
        android:id="@+id/imageView3"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Sale type:"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:layout_below="@+id/editText"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:layout_below="@+id/textView7"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/artistDetail"
        android:textSize="18sp"
        android:layout_alignBottom="@+id/imageDetail"
        android:layout_toEndOf="@+id/imageDetail" />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/imageDetail"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/editText4" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView8" />

</RelativeLayout>
